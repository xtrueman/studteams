{% extends "base.jinja" %}
{% block title %}Команды - StudHelper{% endblock %}

{% block head %}
<style>
    .team-row {
        background-color: #f8f9fa;
        font-weight: 600;
    }
    
    .member-row {
        background-color: #ffffff;
    }
    
    .team-row:hover {
        background-color: #e9ecef;
    }
    
    .member-row:hover {
        background-color: #f8f9fa;
    }
    
    .admin-crown {
        color: #ffc107;
        margin-left: 5px;
    }
    
    .stats-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
</style>
{% endblock %}

{% block content %}
<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <!-- Заголовок и статистика -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-6 fw-bold text-primary mb-0">
                        <i class="bi bi-people-fill"></i>
                        Команды
                    </h1>
                    <p class="text-muted mb-0">Список всех студенческих команд и их участников</p>
                </div>
                
                <div class="d-flex gap-3">
                    <div class="stats-card rounded p-3 text-center">
                        <div class="fs-4 fw-bold">{{ teams_count }}</div>
                        <div class="small">Команд</div>
                    </div>
                    <div class="stats-card rounded p-3 text-center">
                        <div class="fs-4 fw-bold">{{ students_count }}</div>
                        <div class="small">Студентов</div>
                    </div>
                </div>
            </div>

            <!-- Таблица команд -->
            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width: 30%">Команда / Участник</th>
                                    <th style="width: 25%">Продукт / Группа</th>
                                    <th style="width: 25%">Роль</th>
                                    <th style="width: 20%">Кол. отчётов</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for team in teams %}
                                    <!-- Строка команды -->
                                    <tr class="team-row">
                                        <td>
                                            <strong>
                                                <i class="bi bi-diagram-3-fill text-primary me-2"></i>
                                                {{ team.team_name }}
                                            </strong>
                                        </td>
                                        <td>
                                            <span class="text-muted">
                                                <i class="bi bi-box-seam me-1"></i>
                                                {{ team.product_name }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">
                                                {{ team.members|length }} участник{% if team.members|length > 1 %}ов{% endif %}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="text-muted">—</span>
                                        </td>
                                    </tr>
                                    
                                    <!-- Строки участников команды -->
                                    {% for member in team.members %}
                                    <tr class="member-row">
                                        <td class="ps-4">
                                            <i class="bi bi-person-fill text-secondary me-2"></i>
                                            {{ member.name }}
                                        </td>
                                        <td>
                                            {% if member.group_num %}
                                                <span class="badge bg-light text-dark">
                                                    <i class="bi bi-mortarboard me-1"></i>
                                                    {{ member.group_num }}
                                                </span>
                                            {% else %}
                                                <span class="text-muted">—</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="text-dark">{{ member.role }}</span>
                                            {% if member.is_admin %}
                                                <i class="bi bi-crown-fill admin-crown" title="Администратор команды"></i>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if member.reports_count > 0 %}
                                                <span class="badge bg-success">
                                                    <i class="bi bi-file-earmark-text me-1"></i>
                                                    {{ member.reports_count }}
                                                </span>
                                            {% else %}
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                                    0
                                                </span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    {% endfor %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {% if not teams %}
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-people display-1 text-muted"></i>
                </div>
                <h3 class="text-muted">Команды не найдены</h3>
                <p class="text-muted">В системе пока нет зарегистрированных команд.</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
$(document).ready(function() {
    // Подсветка активного элемента навигации
    $('.nav-link').removeClass('active');
    $('a[href="/teams"]').addClass('active');
    
    // Добавляем эффект при наведении на строки команд
    $('.team-row').hover(
        function() {
            $(this).nextUntil('.team-row').addClass('table-secondary');
        },
        function() {
            $(this).nextUntil('.team-row').removeClass('table-secondary');
        }
    );
});
</script>
{% endblock %}
