[Unit]
Description=StudTeams Telegram Bot
After=network.target mysql.service
Wants=mysql.service

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/srv/studteams
Environment="PATH=/srv/studteams/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/srv/studteams/venv/bin/python3 /srv/studteams/bot.py
Restart=always
RestartSec=10

# Логирование
StandardOutput=journal
StandardError=journal
SyslogIdentifier=studteams-bot

# Безопасность
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
